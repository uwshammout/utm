<Window x:Class="CronBlocks.UTM.Windows.DeviceCalibrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CronBlocks.UTM.Windows"
        xmlns:luc="clr-namespace:CronBlocks.UTM.UserControls"
        mc:Ignorable="d"
        Title="Device Calibration"
        FontFamily="Segoe UI Light"
        FontSize="14"
        MinHeight="750" MinWidth="650"
        MaxHeight="950" MaxWidth="900"
        Height="750" Width="700">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment"  Value="Center" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="Margin" Value="0,2,0,2" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="Auto" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Margin" Value="2,2,2,2" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Width" Value="Auto" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="2,2,2,2" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style TargetType="StatusBar">
            <Setter Property="Margin" Value="3,2,3,2" />
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Password Input -->
        <Grid x:Name="PasswordInputPanel" Panel.ZIndex="0" Background="AliceBlue">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Margin" Value="3" />
                </Style>
                <Style TargetType="PasswordBox">
                    <Setter Property="Margin" Value="80,10" />
                    <Setter Property="MinHeight" Value="35" />
                    <Setter Property="MaxWidth" Value="500" />
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="1"
                       Text="Provide password to access these settings"
                       HorizontalAlignment="Center"/>

            <PasswordBox Grid.Row="2"
                         x:Name="PasswordInput"
                         Foreground="Chocolate"
                         HorizontalAlignment="Stretch"
                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                         PasswordChanged="PasswordInput_PasswordChanged"/>

            <TextBlock Grid.Row="3"
                       x:Name="PasswordInputValidityMessage"
                       Text="Wrong password"
                       Foreground="DarkRed"
                       Visibility="Collapsed"
                       HorizontalAlignment="Center"/>
        </Grid>

        <!-- Normal Data -->
        <TabControl>
            <TabItem Header="Device Registers">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="42"/>
                        <!-- Ax -->
                        <ColumnDefinition Width="68"/>
                        <!-- /1000x -->
                        <ColumnDefinition Width="*"/>
                        <!-- Factor -->
                        <ColumnDefinition Width="20"/>
                        <!-- + -->
                        <ColumnDefinition Width="*"/>
                        <!-- Factor -->
                        <ColumnDefinition Width="90"/>
                        <!-- Value -->
                        <ColumnDefinition Width="70"/>
                        <!-- Unit -->
                        <ColumnDefinition Width="3.5*"/>
                        <!-- Remarks -->
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <!-- Headings -->
                        <RowDefinition Height="30"/>
                        <!-- A1-A16 -->
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <!-- Message bar -->
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>

                    <!-- Borders / Backgrounds -->
                    <Border Tag="Correction Factors"
                            Grid.Row="0" Grid.Column="1"
                            Grid.RowSpan="17" Grid.ColumnSpan="4"
                            CornerRadius="5,5,5,5"
                            Background="#FFFFF6CB" />

                    <Border Tag="Processed Values"
                            Grid.Row="0" Grid.Column="5"
                            Grid.RowSpan="17" Grid.ColumnSpan="1"
                            CornerRadius="5,5,5,5"
                            Background="#FFFBECF7" />

                    <Border Tag="Units"
                            Grid.Row="0" Grid.Column="6"
                            Grid.RowSpan="17" Grid.ColumnSpan="1"
                            CornerRadius="5,5,5,5"
                            Background="#FFFFFAED" />

                    <!-- Headings -->
                    <Label Grid.Row="0" Grid.Column="1" Content="Correction factor" Grid.ColumnSpan="4" Margin="0" />
                    <Label Grid.Row="0" Grid.Column="5" Content="Value" FontWeight="Bold" Margin="0" />
                    <Label Grid.Row="0" Grid.Column="6" Content="Unit" FontWeight="Bold" Margin="0" />
                    <Label Grid.Row="0" Grid.Column="7" Content="Remarks" FontWeight="Bold" Margin="0" />

                    <!-- Register Names -->
                    <Label Grid.Row="1" Content="A1" FontStyle="Normal" />
                    <Label Grid.Row="2" Content="A2" FontStyle="Normal" />
                    <Label Grid.Row="3" Content="A3" FontStyle="Normal" />
                    <Label Grid.Row="4" Content="A4" FontStyle="Normal" />
                    <Label Grid.Row="5" Content="A5" FontStyle="Normal" />
                    <Label Grid.Row="6" Content="A6" FontStyle="Normal" />
                    <Label Grid.Row="7" Content="A7" FontStyle="Normal" />
                    <Label Grid.Row="8" Content="A8" FontStyle="Normal" />
                    <Label Grid.Row="9" Content="A9" FontStyle="Normal" />
                    <Label Grid.Row="10" Content="A10" FontStyle="Normal" />
                    <Label Grid.Row="11" Content="A11" FontStyle="Normal" />
                    <Label Grid.Row="12" Content="A12" FontStyle="Normal" />
                    <Label Grid.Row="13" Content="A13" FontStyle="Normal" />
                    <Label Grid.Row="14" Content="A14" FontStyle="Normal" />
                    <Label Grid.Row="15" Content="A15" FontStyle="Normal" />
                    <Label Grid.Row="16" Content="A16" FontStyle="Normal" />

                    <!-- Initial Multiplication Factor -->
                    <Label Grid.Row="1" Grid.Column="1" Content=" ÷ 1000 x " />
                    <Label Grid.Row="2" Grid.Column="1" Content=" ÷ 1000 x " />
                    <Label Grid.Row="3" Grid.Column="1" Content=" ÷ 1000 x " />
                    <Label Grid.Row="4" Grid.Column="1" Content=" ÷ 1000 x " />
                    <Label Grid.Row="5" Grid.Column="1" Content=" ÷ 1000 x " />
                    <Label Grid.Row="6" Grid.Column="1" Content=" ÷ 1000 x " />
                    <Label Grid.Row="7" Grid.Column="1" Content=" ÷ 1000 x " />
                    <Label Grid.Row="8" Grid.Column="1" Content=" ÷ 1000 x " />
                    <Label Grid.Row="9" Grid.Column="1" Content=" ÷ 1000 x " />
                    <Label Grid.Row="10" Grid.Column="1" Content=" ÷ 1000 x " />
                    <Label Grid.Row="11" Grid.Column="1" Content=" ÷ 1000 x " />
                    <Label Grid.Row="12" Grid.Column="1" Content=" ÷ 1000 x " />
                    <Label Grid.Row="13" Grid.Column="1" Content=" ÷ 1000 x " />
                    <Label Grid.Row="14" Grid.Column="1" Content=" ÷ 1000 x " />
                    <Label Grid.Row="15" Grid.Column="1" Content=" ÷ 1000 x " />
                    <Label Grid.Row="16" Grid.Column="1" Content=" ÷ 1000 x " />

                    <!-- Multiplication Factor -->
                    <TextBox Grid.Row="1" Grid.Column="2" x:Name="MultiplicationFactorA1" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="2" Grid.Column="2" x:Name="MultiplicationFactorA2" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="3" Grid.Column="2" x:Name="MultiplicationFactorA3" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="4" Grid.Column="2" x:Name="MultiplicationFactorA4" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="5" Grid.Column="2" x:Name="MultiplicationFactorA5" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="6" Grid.Column="2" x:Name="MultiplicationFactorA6" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="7" Grid.Column="2" x:Name="MultiplicationFactorA7" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="8" Grid.Column="2" x:Name="MultiplicationFactorA8" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="9" Grid.Column="2" x:Name="MultiplicationFactorA9" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="10" Grid.Column="2" x:Name="MultiplicationFactorA10" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="11" Grid.Column="2" x:Name="MultiplicationFactorA11" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="12" Grid.Column="2" x:Name="MultiplicationFactorA12" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="13" Grid.Column="2" x:Name="MultiplicationFactorA13" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="14" Grid.Column="2" x:Name="MultiplicationFactorA14" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="15" Grid.Column="2" x:Name="MultiplicationFactorA15" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="16" Grid.Column="2" x:Name="MultiplicationFactorA16" TextChanged="OnTextChanged" />

                    <!-- Addition Factor Symbol -->
                    <Label Grid.Row="1" Grid.Column="3" Content="+" />
                    <Label Grid.Row="2" Grid.Column="3" Content="+" />
                    <Label Grid.Row="3" Grid.Column="3" Content="+" />
                    <Label Grid.Row="4" Grid.Column="3" Content="+" />
                    <Label Grid.Row="5" Grid.Column="3" Content="+" />
                    <Label Grid.Row="6" Grid.Column="3" Content="+" />
                    <Label Grid.Row="7" Grid.Column="3" Content="+" />
                    <Label Grid.Row="8" Grid.Column="3" Content="+" />
                    <Label Grid.Row="9" Grid.Column="3" Content="+" />
                    <Label Grid.Row="10" Grid.Column="3" Content="+" />
                    <Label Grid.Row="11" Grid.Column="3" Content="+" />
                    <Label Grid.Row="12" Grid.Column="3" Content="+" />
                    <Label Grid.Row="13" Grid.Column="3" Content="+" />
                    <Label Grid.Row="14" Grid.Column="3" Content="+" />
                    <Label Grid.Row="15" Grid.Column="3" Content="+" />
                    <Label Grid.Row="16" Grid.Column="3" Content="+" />

                    <!-- Offsets -->
                    <TextBox Grid.Row="1" Grid.Column="4" x:Name="OffsetA1" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="2" Grid.Column="4" x:Name="OffsetA2" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="3" Grid.Column="4" x:Name="OffsetA3" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="4" Grid.Column="4" x:Name="OffsetA4" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="5" Grid.Column="4" x:Name="OffsetA5" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="6" Grid.Column="4" x:Name="OffsetA6" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="7" Grid.Column="4" x:Name="OffsetA7" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="8" Grid.Column="4" x:Name="OffsetA8" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="9" Grid.Column="4" x:Name="OffsetA9" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="10" Grid.Column="4" x:Name="OffsetA10" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="11" Grid.Column="4" x:Name="OffsetA11" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="12" Grid.Column="4" x:Name="OffsetA12" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="13" Grid.Column="4" x:Name="OffsetA13" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="14" Grid.Column="4" x:Name="OffsetA14" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="15" Grid.Column="4" x:Name="OffsetA15" TextChanged="OnTextChanged" />
                    <TextBox Grid.Row="16" Grid.Column="4" x:Name="OffsetA16" TextChanged="OnTextChanged" />

                    <!-- Processed Values -->
                    <TextBlock Grid.Row="1" Grid.Column="5" x:Name="ProcessedValueA1" Text="0.000" />
                    <TextBlock Grid.Row="2" Grid.Column="5" x:Name="ProcessedValueA2" Text="0.000" />
                    <TextBlock Grid.Row="3" Grid.Column="5" x:Name="ProcessedValueA3" Text="0.000" />
                    <TextBlock Grid.Row="4" Grid.Column="5" x:Name="ProcessedValueA4" Text="0.000" />
                    <TextBlock Grid.Row="5" Grid.Column="5" x:Name="ProcessedValueA5" Text="0.000" />
                    <TextBlock Grid.Row="6" Grid.Column="5" x:Name="ProcessedValueA6" Text="0.000" />
                    <TextBlock Grid.Row="7" Grid.Column="5" x:Name="ProcessedValueA7" Text="0.000" />
                    <TextBlock Grid.Row="8" Grid.Column="5" x:Name="ProcessedValueA8" Text="0.000" />
                    <TextBlock Grid.Row="9" Grid.Column="5" x:Name="ProcessedValueA9" Text="0.000" />
                    <TextBlock Grid.Row="10" Grid.Column="5" x:Name="ProcessedValueA10" Text="0.000" />
                    <TextBlock Grid.Row="11" Grid.Column="5" x:Name="ProcessedValueA11" Text="0.000" />
                    <TextBlock Grid.Row="12" Grid.Column="5" x:Name="ProcessedValueA12" Text="0.000" />
                    <TextBlock Grid.Row="13" Grid.Column="5" x:Name="ProcessedValueA13" Text="0.000" />
                    <TextBlock Grid.Row="14" Grid.Column="5" x:Name="ProcessedValueA14" Text="0.000" />
                    <TextBlock Grid.Row="15" Grid.Column="5" x:Name="ProcessedValueA15" Text="0.000" />
                    <TextBlock Grid.Row="16" Grid.Column="5" x:Name="ProcessedValueA16" Text="0.000" />

                    <!-- Unit -->
                    <Label Grid.Row="1" Grid.Column="6" Content="mm" />
                    <Label Grid.Row="2" Grid.Column="6" Content="kN" />
                    <Label Grid.Row="3" Grid.Column="6" Content="'" />
                    <Label Grid.Row="4" Grid.Column="6" Content="'" />
                    <Label Grid.Row="5" Grid.Column="6" Content="'" />
                    <Label Grid.Row="6" Grid.Column="6" Content="'" />
                    <Label Grid.Row="7" Grid.Column="6" Content="'" />
                    <Label Grid.Row="8" Grid.Column="6" Content="'" />
                    <Label Grid.Row="9" Grid.Column="6" Content="'" />
                    <Label Grid.Row="10" Grid.Column="6" Content="'" />
                    <Label Grid.Row="11" Grid.Column="6" Content="'" />
                    <Label Grid.Row="12" Grid.Column="6" Content="'" />
                    <Label Grid.Row="13" Grid.Column="6" Content="'" />
                    <Label Grid.Row="14" Grid.Column="6" Content="'" />
                    <Label Grid.Row="15" Grid.Column="6" Content="'" />
                    <Label Grid.Row="16" Grid.Column="6" Content="'" />

                    <!-- Remarks -->
                    <Label Grid.Row="1" Grid.Column="7" Content="Distance sensor value" HorizontalAlignment="Left" />
                    <Label Grid.Row="2" Grid.Column="7" Content="Load cell value" HorizontalAlignment="Left" />
                    <Label Grid.Row="3" Grid.Column="7" Content="-- RESERVED --" />
                    <Label Grid.Row="4" Grid.Column="7" Content="-- RESERVED --" />
                    <Label Grid.Row="5" Grid.Column="7" Content="-- RESERVED --" />
                    <Label Grid.Row="6" Grid.Column="7" Content="-- RESERVED --" />
                    <Label Grid.Row="7" Grid.Column="7" Content="-- RESERVED --" />
                    <Label Grid.Row="8" Grid.Column="7" Content="-- RESERVED --" />
                    <Label Grid.Row="9" Grid.Column="7" Content="-- RESERVED --" />
                    <Label Grid.Row="10" Grid.Column="7" Content="-- RESERVED --" />
                    <Label Grid.Row="11" Grid.Column="7" Content="-- RESERVED --" />
                    <Label Grid.Row="12" Grid.Column="7" Content="-- RESERVED --" />
                    <Label Grid.Row="13" Grid.Column="7" Content="-- RESERVED --" />
                    <Label Grid.Row="14" Grid.Column="7" Content="-- RESERVED --" />
                    <Label Grid.Row="15" Grid.Column="7" Content="-- RESERVED --" />
                    <Label Grid.Row="16" Grid.Column="7" Content="-- RESERVED --" />

                    <!-- Information bar -->
                    <StatusBar Grid.Row="17" Grid.ColumnSpan="8">
                        <TextBlock x:Name="StatusMessage"
                                   HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                   FontWeight="Normal" Margin="1" />
                    </StatusBar>
                </Grid>
            </TabItem>
            <TabItem Header="Distance Calibration">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!-- Values' Display -->
                    <Grid Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <luc:DigitalValueDisplay x:Name="DistanceScaledValue"
                                                 Heading="Scaled Value" Margin="3"
                                                 BackgroundColor="#FF022C50"/>
                        <luc:DigitalValueDisplay x:Name="DistanceCalibratedValue" Grid.Column="1"
                                                 Heading="Calibrated Value" Margin="3" BackgroundColor="#FF234201"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Load Cell Calibration">
            </TabItem>
            <TabItem Header="Password Update">
                <Grid Margin="5,15">
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Margin" Value="5,5" />
                            <Setter Property="FontWeight" Value="Normal" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                        <Style TargetType="PasswordBox">
                            <Setter Property="Margin" Value="5,5" />
                            <Setter Property="FontWeight" Value="Normal" />
                            <Setter Property="MinHeight" Value="32" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                        <Style TargetType="Button">
                            <Setter Property="Margin" Value="5,5" />
                            <Setter Property="Padding" Value="15,10" />
                            <Setter Property="FontWeight" Value="Normal" />
                            <Setter Property="MinHeight" Value="32" />
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </Grid.Resources>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="New password" Grid.Row="0" Grid.Column="0" />
                    <TextBlock Text="Repeat password" Grid.Row="1" Grid.Column="0" />

                    <PasswordBox x:Name="PasswordNew" Grid.Row="0" Grid.Column="1" PasswordChanged="PasswordNew_PasswordChanged" />
                    <PasswordBox x:Name="PasswordNewRepeat" Grid.Row="1" Grid.Column="1" PasswordChanged="PasswordNew_PasswordChanged" />

                    <TextBlock x:Name="PasswordNewValidationMessage"
                               Text="" Foreground="DarkRed" HorizontalAlignment="Center"
                               Grid.Row="2" Grid.ColumnSpan="2" />

                    <Button Content="Update" Grid.Row="3" Grid.ColumnSpan="2"
                            x:Name="PasswordNewUpdateButton" IsEnabled="False"
                            Click="PasswordNewUpdateButton_Click"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
