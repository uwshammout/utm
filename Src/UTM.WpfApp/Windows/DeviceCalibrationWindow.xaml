                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="DistanceCalibrationInput06" />
                                    <TextBox x:Name="DistanceCalibrationOutput06" Grid.Column="1" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="DistanceCalibrationInput07" />
                                    <TextBox x:Name="DistanceCalibrationOutput07" Grid.Column="1" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="DistanceCalibrationInput08" />
                                    <TextBox x:Name="DistanceCalibrationOutput08" Grid.Column="1" />
                                </Grid>
