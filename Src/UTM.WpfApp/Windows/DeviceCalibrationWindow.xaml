<Window x:Class="CronBlocks.UTM.Windows.DeviceCalibrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CronBlocks.UTM.Windows"
        xmlns:luc="clr-namespace:CronBlocks.UTM.UserControls"
        mc:Ignorable="d"
        Title="Device Calibration"
        FontFamily="Segoe UI Light"
        FontSize="14"
        MinHeight="750" MinWidth="650"
        MaxHeight="950" MaxWidth="900"
        Height="750" Width="700">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment"  Value="Center" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="Margin" Value="0,2,0,2" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="Auto" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Margin" Value="2,2,2,2" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Width" Value="Auto" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="2,2,2,2" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style TargetType="StatusBar">
            <Setter Property="Margin" Value="3,2,3,2" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <!-- Password Input -->
        <Grid x:Name="PasswordInputPanel" Panel.ZIndex="0" Background="AliceBlue" Grid.RowSpan="2">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Margin" Value="3" />
                </Style>
                <Style TargetType="PasswordBox">
                    <Setter Property="Margin" Value="80,10" />
                    <Setter Property="MinHeight" Value="35" />
                    <Setter Property="MaxWidth" Value="500" />
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="1"
                       Text="Provide password to access these settings"
                       HorizontalAlignment="Center"/>

            <PasswordBox Grid.Row="2"
                         x:Name="PasswordInput"
                         Foreground="Chocolate"
                         HorizontalAlignment="Stretch"
                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                         PasswordChanged="PasswordInput_PasswordChanged"/>

            <TextBlock Grid.Row="3"
                       x:Name="PasswordInputValidityMessage"
                       Text="Wrong password"
                       Foreground="DarkRed"
                       Visibility="Collapsed"
                       HorizontalAlignment="Center"/>
        </Grid>

        <!-- Normal Data -->
        <TabControl>
            <TabItem Header="Device Registers">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="42"/> <!-- Ax -->
                        <ColumnDefinition Width="68"/> <!-- /1000x -->
                        <ColumnDefinition Width="*"/>  <!-- Factor -->
                        <ColumnDefinition Width="20"/> <!-- + -->
                        <ColumnDefinition Width="*"/>  <!-- Factor -->
                        <ColumnDefinition Width="90"/> <!-- Value -->
                        <ColumnDefinition Width="70"/> <!-- Unit -->
                        <ColumnDefinition Width="3.5*"/> <!-- Remarks -->
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <!-- Headings -->
                        <RowDefinition Height="30"/>
                        <!-- A1-A16 -->
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Borders / Backgrounds -->
                    <Border Tag="Correction Factors"
                            Grid.Row="0" Grid.Column="1"
                            Grid.RowSpan="17" Grid.ColumnSpan="4"
                            CornerRadius="5,5,5,5"
                            Background="#FFFFF6CB" />

                    <Border Tag="Processed Values"
                            Grid.Row="0" Grid.Column="5"
                            Grid.RowSpan="17" Grid.ColumnSpan="1"
                            CornerRadius="5,5,5,5"
                            Background="#FFFBECF7" />

                    <Border Tag="Units"
                            Grid.Row="0" Grid.Column="6"
                            Grid.RowSpan="17" Grid.ColumnSpan="1"
                            CornerRadius="5,5,5,5"
                            Background="#FFFFFAED" />

                    <!-- Headings -->
                    <Label Grid.Row="0" Grid.Column="1" Content="Correction factor" Grid.ColumnSpan="4" Margin="0" />
                    <Label Grid.Row="0" Grid.Column="5" Content="Value" FontWeight="Bold" Margin="0" />
                    <Label Grid.Row="0" Grid.Column="6" Content="Unit" FontWeight="Bold" Margin="0" />
                    <Label Grid.Row="0" Grid.Column="7" Content="Remarks" FontWeight="Bold" Margin="0" />

                    <!-- Register Names -->
